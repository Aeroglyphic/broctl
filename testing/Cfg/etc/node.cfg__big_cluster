# Big cluster (i.e., lots of nodes on one host) configuration.

[manager]
type=manager
host=localhost

[datanode-1]
type=datanode
host=localhost

[datanode-2]
type=datanode
host=localhost

[worker-1]
type=worker
host=localhost
interface=eth0
lb_method=pf_ring
lb_procs=10

[worker-2]
type=worker
host=localhost
interface=eth1
lb_method=pf_ring
lb_procs=10

